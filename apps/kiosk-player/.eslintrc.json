{
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "eqeqeq": "error",
      "prettier/prettier": "error"
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "latest"
    },
    "env": {
      "node": true,
      "es6": true,
      "jest": true,
      "browser": true,
      "commonjs": true,
      "es2021": true
    },
    "ignorePatterns": [
      "node_modules",
      "build",
      "dist",
      "public"
    ]
  }